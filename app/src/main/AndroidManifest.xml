<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baby.firstgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:screenOrientation="portrait"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"></uses-permission>
        <activity android:name=".FirstGamelActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MonsterHomeActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".ChooseCreatureActivity"
            android:noHistory="true"
            android:launchMode="singleTask"/>
        <activity android:name=".NameCreatureActivity"
            android:noHistory="true"
            android:launchMode="singleTask"/>
        <activity android:name=".CreatureProfileActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>